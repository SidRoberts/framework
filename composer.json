{
    "name":        "sidroberts/framework",
    "description": "A simple and easy to use MVC framework.",
    "type":        "library",
    "license":     "MIT",



    "authors": [
        {
            "name":     "Sid Roberts",
            "email":    "sid@sidroberts.co.uk",
            "homepage": "https://sidroberts.co.uk",
            "role":     "Developer"
        }
    ],



    "support": {
        "source": "https://github.com/SidRoberts/framework",
        "issues": "https://github.com/SidRoberts/framework/issues",
        "wiki":   "https://github.com/SidRoberts/framework/wiki"
    },



    "require": {
        "php": "~7.1",

        "sidroberts/container-resolver": "~1.0",

        "symfony/dependency-injection": "~4.0",

        "doctrine/annotations": "~1.6",

        "symfony/http-foundation": "~3.4 || ~4.0",

        "twig/twig": "~2.0"
    },

    "require-dev": {
        "codeception/codeception": "~2.5",
        "phpunit/php-code-coverage": "~6.0",

        "squizlabs/php_codesniffer": "~3.4"
    },



    "autoload": {
        "psr-4": {
            "Sid\\Framework\\": "src/"
        },
        "files": [
            "src/Router/Route/Uri.php",
            "src/Router/Route/Method.php",
            "src/Router/Route/Requirements.php",
            "src/Router/Route/Middlewares.php",
            "src/Router/Route/Converters.php"
        ]
    }
